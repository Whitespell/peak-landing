<% layout('_inc/layout') -%>

<h1 class="logo logo--big"><img src="/img/peak-logo.svg" alt="Peak Logo"></h1>

<form action="#" method="post" id="signup-form">
  <div class="input-wrapper">
    <input id="signup-username-input" class="input-wrapper__input" name="username" type="text"
    placeholder="Create a username" required>
    <input id="signup-email-input" class="input-wrapper__input" name="email" type="email"
    placeholder="Your email address" required>
    <input id="signup-pass-input" class="input-wrapper__input" name="password" type="password"
    placeholder="Create a password" required>
      <span id="signup-send-btn" class="input-wrapper__icon-wrapper ss-icon ss-standard">
        <span class="input-wrapper__icon-wrapper__icon"></span>
      </span>
  </div>
</form>