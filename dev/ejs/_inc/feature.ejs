<div class="feature <%= options.reversed ? 'feature--bg' : '' %>">
	<div class="container">

		<% if(options.reversed){ %>

		<div class="column column--half">
			<div class="feature__preview">
				<img src="/img/<%= previewSrc %>" />
			</div>
		</div>
		<div class="column column--half">
			<div class="feature__content">
				<h2 class="feature__content__title"><%= title %></h2>
				<h4 class="feature__content__sub-title"><%= sub_title %></h4>
				<p class="feature__content__desc">
					<%= desc %>
				</p>
				<div class="feature__content__testimonial testimonial">
					<div class="testimonial__photo">
						<img src="/img/<%= testimonial.imgSrc %>" />
					</div>
					<div class="testimonial__content">
						<blockquote>
							<%= testimonial.quote %>
							<cite>— <%= testimonial.cite %></cite>
						</blockquote>
						<div class="testimonial__content__logo <%= testimonial.logo.isVertical ? 'testimonial__content__logo--vertical' : '' %>">
							<img src="/img/<%= testimonial.logo.src %>" />
						</div>
					</div>
				</div>
			</div>
		</div>


		<% } else { %>

		<div class="column column--half">
			<div class="feature__content">
				<h2 class="feature__content__title"><%= title %></h2>
				<h4 class="feature__content__sub-title"><%= sub_title %></h4>
				<p class="feature__content__desc">
					<%= desc %>
				</p>
				<div class="feature__content__testimonial testimonial">
					<div class="testimonial__photo">
						<img src="/img/<%= testimonial.imgSrc %>" />
					</div>
					<div class="testimonial__content">
						<blockquote>
							<%= testimonial.quote %>
							<cite>— <%= testimonial.cite %></cite>
						</blockquote>
						<div class="testimonial__content__logo <%= testimonial.logo.isVertical ? 'testimonial__content__logo--vertical' : '' %>">
							<img src="/img/<%= testimonial.logo.src %>" />
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="column column--half">
			<div class="feature__preview">
				<img src="/img/<%= previewSrc %>" />
			</div>
		</div>

		<% } %>

	</div>
</div>